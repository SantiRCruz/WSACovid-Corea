<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WSACovid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/proxima_bold</item>
    </style>

    <style name="SemiBold" parent="Theme.WSACovid">
        <item name="fontFamily">@font/proxima_semibold</item>
    </style>

    <style name="Regular" parent="Theme.WSACovid">
        <item name="fontFamily">@font/proxima_regular</item>
    </style>

    <style name="Button" parent="@android:style/Widget.Button">
        <item name="background">@drawable/white_bg</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="enforceTextAppearance">false</item>
        <item name="android:textColor">@color/blue</item>
        <item name="fontFamily">@font/proxima_bold_family</item>
    </style>

    <style name="Theme.WSACovid.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.WSACovid.AppWidgetContainer" parent="Theme.WSACovid.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
    </style>
</resources>